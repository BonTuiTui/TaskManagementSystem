@model TaskManagementSystem.ViewModels.EditUserRolesViewModel

<h1>Edit Roles for @Model.UserName</h1>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="UserRoles">Roles</label>
        @foreach (var role in Model.Roles)
        {
            <div>
                <input type="checkbox" name="UserRoles" value="@role"
                       @(Model.UserRoles.Contains(role) ? "checked=\"checked\"" : "") /> @role
                </div>
            }

    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
