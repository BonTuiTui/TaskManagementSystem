@{
}

@model TaskManagementSystem.Models.Task

<h1>Edit Task</h1>

@if (Model is null)
{
    <p>No task was found with this Id</p>
}
else
{
    <form asp-action="Edit" method="post">
        <div class="mt-3">
            <label class="form-label">Task Id</label>
            <input type="text" class="form-control" asp-for="Task_id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Project Id</label>
            <input type="number" class="form-control" asp-for="Project_Id" />
        </div>

        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" asp-for="Status" />
        </div>

        <div class="mt-3">
            <label class="form-label">Assigned To</label>
            <input type="number" class="form-control" asp-for="AssignedTo" />
        </div>

        <div class="mt-3">
            <label class="form-label">Created At</label>
            <input type="datetime-local" class="form-control" asp-for="CreateAt" />
        </div>

        <div class="mt-3">
            <label class="form-label">Updated At</label>
            <input type="datetime-local" class="form-control" asp-for="UpdateAt" />
        </div>

        <div class="mt-3">
            <label class="form-label">Due Date</label>
            <input type="datetime-local" class="form-control" asp-for="DueDate" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Tasks">
                Delete
            </button>
        </div>
    </form>
}
