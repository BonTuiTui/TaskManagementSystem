@{
}
@model List<TaskManagementSystem.Models.Project>

<h1>Projects</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Create At</th>
            <th>Update At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Project_id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreateAt</td>
                <td>@item.UpdateAt</td>
                @*<td>
            <a class="btn btn-primary" asp-controller="Projects" asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a>
        </td>*@
            <td>
                <a href="@Url.Action("Details", "Projects", new { id = item.Project_id })">View Details</a> |
                <a href="@Url.Action("Edit", "Projects", new { id = item.Project_id })">Edit</a> |
                <form method="post" action="@Url.Action("Delete", "Projects")" style="display:inline;">
                    <input type="hidden" name="Project_id" value="@item.Project_id" />
                    <button type="submit" class="btn btn-link">Delete</button>
                </form>
            </td>
            </tr>
        }
    </tbody>
</table>